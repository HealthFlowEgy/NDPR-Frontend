{
  "expo": {
    "name": "HealthFlow",
    "slug": "healthflow-mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "scheme": "healthflow",
    "userInterfaceStyle": "light",
    "newArchEnabled": false,
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#1e3a5f"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.healthflow.mobile",
      "buildNumber": "1",
      "infoPlist": {
        "NSCameraUsageDescription": "HealthFlow needs camera access to scan QR codes for credential verification.",
        "NSFaceIDUsageDescription": "HealthFlow uses Face ID for secure authentication and document signing."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#1e3a5f"
      },
      "package": "com.healthflow.mobile",
      "versionCode": 1,
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.USE_BIOMETRIC",
        "android.permission.USE_FINGERPRINT"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      [
        "expo-build-properties",
        {
          "android": {
            "compileSdkVersion": 35,
            "targetSdkVersion": 34,
            "buildToolsVersion": "35.0.0",
            "kotlinVersion": "1.9.25"
          },
          "ios": {
            "deploymentTarget": "15.1"
          }
        }
      ],
      "expo-router",
      "expo-secure-store",
      [
        "expo-local-authentication",
        {
          "faceIDPermission": "Allow HealthFlow to use Face ID for authentication."
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "HealthFlow needs camera access to scan QR codes."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "1def6c0c-9145-45c0-9c0b-6b1698a676a7"
      }
    },
    "owner": "healthflow"
  }
}
