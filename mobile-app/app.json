{
  "expo": {
    "name": "HealthFlow",
    "slug": "healthflow-mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/logo.png",
    "scheme": "com.healthflow.mobile",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/logo.png",
      "resizeMode": "contain",
      "backgroundColor": "#1e3a5f"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.healthflow.mobile",
      "buildNumber": "1",
      "infoPlist": {
        "NSCameraUsageDescription": "HealthFlow needs camera access to scan QR codes for credential verification.",
        "NSFaceIDUsageDescription": "HealthFlow uses Face ID for secure authentication and document signing."
      },
      "config": {
        "usesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/logo.png",
        "backgroundColor": "#1e3a5f"
      },
      "package": "com.healthflow.mobile",
      "versionCode": 1,
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.USE_BIOMETRIC",
        "android.permission.USE_FINGERPRINT"
      ]
    },
    "web": {
      "favicon": "./assets/logo.png",
      "bundler": "metro"
    },
    "plugins": [
      "expo-router",
      "expo-secure-store",
      [
        "expo-local-authentication",
        {
          "faceIDPermission": "Allow HealthFlow to use Face ID for authentication."
        }
      ],
      [
        "react-native-vision-camera",
        {
          "cameraPermissionText": "HealthFlow needs camera access to scan QR codes."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "healthflow-mobile-app"
      }
    }
  }
}
