# HealthFlow Frontend Environment Configuration

# Registry API
REGISTRY_API_URL=https://registry.healthflow.tech/api/v1

# Keycloak Authentication
KEYCLOAK_URL=https://keycloak.healthflow.tech
KEYCLOAK_REALM=sunbird-rc
KEYCLOAK_CLIENT_ID=registry-frontend

# Identity Service
IDENTITY_SERVICE_URL=https://registry.healthflow.tech/identity

# Credential Service
CREDENTIAL_SERVICE_URL=https://registry.healthflow.tech/credentials

# File Storage
FILE_STORAGE_URL=https://registry.healthflow.tech/files

# Application Settings
APP_NAME=HealthFlow Registry
APP_LOGO_URL=/assets/logo.png
DEFAULT_LANGUAGE=en

# Feature Flags
ENABLE_DID_GENERATION=true
ENABLE_VC_ISSUANCE=true
ENABLE_QR_VERIFICATION=true
